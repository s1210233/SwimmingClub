extends layout

block content
  h1 #{title}
  p #{msg}
  p.caution= error
  p What's your name?
  form(method='post',action='/')
    input(type='text',name='username')
    p What's your password?
    input(type='password',name='password')
    br
    input(type='submit',value='OK')
  p.caution= remember
    form(method='post',action='/create')
      input(type='submit',value='新規登録')